{% extends 'base.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion de la Newsletter</h1>
    <div>
        <a href="{{ path('app_newsletter_new') }}" class="btn" style="background-color: #8b6f47; color: white;">
            ‚ûï Nouvel abonn√©
        </a>
        <button class="btn btn-success" onclick="alert('Fonctionnalit√© d\'envoi de newsletter √† venir !')">
            üìß Envoyer une newsletter
        </button>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5>üìä Total abonn√©s</h5>
                        <h2 class="mb-0">{{ newsletters|length }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5>‚úÖ Actifs</h5>
                        <h2 class="mb-0">{{ newsletters|filter(n => n.isActive)|length }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h5>‚ùå D√©sabonn√©s</h5>
                        <h2 class="mb-0">{{ newsletters|filter(n => not n.isActive)|length }}</h2>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-hover">
            <thead style="background-color: #f5e6d3;">
                <tr>
                    <th>Email</th>
                    <th>Date d'abonnement</th>
                    <th>Statut</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for newsletter in newsletters %}
                <tr>
                    <td><strong>{{ newsletter.email }}</strong></td>
                    <td>{{ newsletter.subscribedAt ? newsletter.subscribedAt|date('d/m/Y H:i') : '' }}</td>
                    <td>
                        {% if newsletter.isActive %}
                            <span class="badge bg-success">‚úÖ Actif</span>
                        {% else %}
                            <span class="badge bg-danger">‚ùå D√©sabonn√©</span>
                        {% endif %}
                    </td>
                    <td class="text-end">
                        <a href="{{ path('app_newsletter_show', {'id': newsletter.id}) }}" class="btn btn-sm btn-info">
                            üëÅÔ∏è Voir
                        </a>
                        <a href="{{ path('app_newsletter_edit', {'id': newsletter.id}) }}" class="btn btn-sm btn-warning">
                            ‚úèÔ∏è Modifier
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucun abonn√© trouv√©</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
