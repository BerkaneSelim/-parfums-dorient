{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.user, 'Client', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.user) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.orderNumber, 'Numéro de commande', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.orderNumber, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.orderNumber) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.totalPrice, 'Prix total (€)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.totalPrice, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.totalPrice) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.status) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.createdAt, 'Date de création', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.createdAt) }}
    </div>

    <button class="btn" style="background-color: #8b6f47; color: white;">
        {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
