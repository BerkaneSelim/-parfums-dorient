{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h1 class="mb-4">Détails de la catégorie</h1>

                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="background-color: #f5e6d3; width: 30%;">ID</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th style="background-color: #f5e6d3;">Nom</th>
                            <td><strong>{{ category.nom }}</strong></td>
                        </tr>
                        <tr>
                            <th style="background-color: #f5e6d3;">Description</th>
                            <td>{{ category.description }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div>
                        <a href="{{ path('app_category_index') }}" class="btn btn-secondary me-2">
                            ← Retour à la liste
                        </a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
                            ✏️ Modifier
                        </a>
                    </div>
                    
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}