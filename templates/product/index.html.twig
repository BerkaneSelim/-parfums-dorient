{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des produits</h1>
    <a href="{{ path('app_product_new') }}" class="btn" style="background-color: #8b6f47; color: white;">
        ‚ûï Nouveau produit
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover">
            <thead style="background-color: #f5e6d3;">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Cat√©gorie</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td><strong>{{ product.nom }}</strong></td>
                    <td>
                        <span class="badge" style="background-color: #8a9a5b;">
                            {{ product.category.nom }}
                        </span>
                    </td>
                    <td><strong style="color: #8b6f47;">{{ product.prix }}‚Ç¨</strong></td>
                    <td>{{ product.stock }}</td>
                    <td class="text-end">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">
                            üëÅÔ∏è Voir
                        </a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">
                            ‚úèÔ∏è Modifier
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">Aucun produit trouv√©</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}