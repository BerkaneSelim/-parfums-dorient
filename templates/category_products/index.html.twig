{% extends 'base.html.twig' %}

{% block title %}{{ category.nom }} - Parfum d'Orient{% endblock %}

{% block body %}
<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active">{{ category.nom }}</li>
        </ol>
    </nav>
    
    <h1 class="display-5 fw-bold" style="color: #8b6f47;">
        {{ category.nom }}
    </h1>
    <p class="text-muted">{{ category.description }}</p>
</div>

<div class="row g-4">
    {% for product in products %}
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm product-card" style="border: none; border-radius: 15px; overflow: hidden; transition: transform 0.3s;">
            <!-- Image du produit -->
            <div style="height: 300px; overflow: hidden; background: linear-gradient(135deg, #f5e6d3, #e8d5b7);">
                <img src="{{ asset('img/' ~ product.image) }}" 
                     class="card-img-top" 
                     alt="{{ product.nom }}"
                     style="width: 100%; height: 100%; object-fit: cover;">
            </div>
            
            <div class="card-body p-4">
                <h5 class="card-title fw-bold mb-2" style="color: #5c4033;">{{ product.nom }}</h5>
                <p class="card-text text-muted small mb-3">{{ product.description|slice(0, 80) }}...</p>
                
                <div class="d-flex justify-content-between align-items-center">
                    <span class="h4 mb-0 fw-bold" style="color: #8b6f47;">{{ product.prix }}‚Ç¨</span>
                    {% if app.user %}
                        <a href="{{ path('app_user_checkout', {'id': product.id}) }}" class="btn btn-sm px-4" 
                           style="background-color: #8b6f47; color: white; border-radius: 25px; text-decoration: none;">
                            üõí Commander
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-sm px-4" 
                           style="background-color: #8b6f47; color: white; border-radius: 25px; text-decoration: none;">
                            üîê Connexion
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-12">
        <div class="alert alert-info text-center">
            Aucun produit dans cette cat√©gorie pour le moment.
        </div>
    </div>
    {% endfor %}
</div>

<style>
.product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2) !important;
}
</style>
{% endblock %}
