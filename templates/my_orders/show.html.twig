{% extends 'base.html.twig' %}

{% block title %}Commande {{ order.orderNumber }} - Parfum d'Orient{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Commande #{{ order.orderNumber }}</h1>
                    {% if order.status == 'en_cours' %}
                        <span class="badge bg-warning fs-5">‚è≥ En cours</span>
                    {% elseif order.status == 'expediee' %}
                        <span class="badge bg-info fs-5">üì¶ Exp√©di√©e</span>
                    {% elseif order.status == 'livree' %}
                        <span class="badge bg-success fs-5">‚úÖ Livr√©e</span>
                    {% else %}
                        <span class="badge bg-secondary fs-5">{{ order.status }}</span>
                    {% endif %}
                </div>

                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <h5>üìã Informations de commande</h5>
                        <p class="mb-1"><strong>Date :</strong> {{ order.createdAt|date('d/m/Y √† H:i') }}</p>
                        <p class="mb-0"><strong>Total :</strong> <span style="color: #8b6f47; font-size: 1.3rem;">{{ order.totalPrice }}‚Ç¨</span></p>
                    </div>
                </div>

                {% if order.orderItems|length > 0 %}
                <h5 class="mb-3">üì¶ Articles command√©s</h5>
                <table class="table table-bordered">
                    <thead style="background-color: #f5e6d3;">
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Quantit√©</th>
                            <th>Sous-total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in order.orderItems %}
                        <tr>
                            <td><strong>{{ item.product.nom }}</strong></td>
                            <td>{{ item.price }}‚Ç¨</td>
                            <td>{{ item.quantity }}</td>
                            <td><strong>{{ item.price * item.quantity }}‚Ç¨</strong></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% endif %}

                <div class="mt-4">
                    <a href="{{ path('app_my_orders') }}" class="btn btn-secondary">
                        ‚Üê Retour √† mes commandes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}